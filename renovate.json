{
  "extends": ["config:base"],
  "python": {
    "enabled": false
  },
  "regexManagers": [
    {
      "fileMatch": ["^versions\\.yml$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\n.*?: (?<currentValue>.*)"
      ],
      "versioningTemplate": "node"
    }
  ],
  "packageRules": [
    {
      "packageNames": ["nginx/nginx"],
      "versioning": "regex:(release-)?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?"
    }
  ]
}
